extends ./Main_Layout.pug

block styles_1
    link(rel='stylesheet' href="/css/other_pages.css")
    link(rel='stylesheet' href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous")
    link(rel='stylesheet' href="/css/form.css")
block script_1
    script(src='js/sticky.js')
    script(src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous")
block content
    br
    br
    div(class="Users_heading" style="text-align: center")
        h1(style="color:white; text-shadow: 1px 1px 2px black, 0 0 25px silver, 0 0 5px darkblue;") Create User Account
    br
    br 
    form(action="/users" method="post" enctype="multipart/form-data")
      .imgcontainer
        p Please fill in this form to create an account.
        img.avatar(src='img/foto.jpeg', alt='Avatar')
      .container
        hr
        label(for='user')
          b Full Name
        input(type="text" placeholder="Full Name" required="required" name="user")
        label(for='email')
          b Email
        input(type='text', placeholder='Enter Email', name='userEmail', required='')
        label(for='designation')
          b Job Title/ Designation
        input(type='text', placeholder='Enter current designation', name='designation', required='')
        label(for='linkedIn')
          b LinkedIn URL
        input(type='text', placeholder='Enter LinkedIn URL', name='linkedIn')
        label(for='psw')
          b Password
        input(type='password', placeholder='Enter Password', name='psw', required='')
        label(for='myTextarea')
          b Brief Description about You :
        textarea(id="myTextarea" placeholder='Type here ...' name='description' rows="4" cols="80" style="white-space: pre-wrap;")
        hr
        label(for='psw-repeat')
          b Choose a Profile Picture : 
        input(type="file" placeholder="user picture" name="file")
        hr
        button Create User
        hr
        p
          | By creating an account you agree to our 
          a(href='#') Terms & Privacy
      .container.signin
        p
          | Already have an account? 
          a(href='Login_Form.html') Sign in
          | .
