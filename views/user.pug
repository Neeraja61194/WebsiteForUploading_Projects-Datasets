extends ./Main_Layout.pug

block styles_1
    link(rel='stylesheet' href="/css/other_pages.css")
    link(rel='stylesheet' href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous")
    link(rel='stylesheet' href="/css/table.css")
block script_1
    script(src='js/sticky.js')
    script(src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous")
block content
  br
  div(class="container")
    div(class="row")
      div(class="shadow p-3 mb-5 bg-white rounded")
        div(class="card" style="width: 18rem;")
            img(class="card-img-top" src='/img/users/' + user.image alt="user.image")
            div(class="card-body")
              h5(class="card-title")= user.name
              p(class="card-text")= user.email
              a(href=user.linkedin class="btn btn-outline-info") Linked In Profile
      div(class="col")
        div(class="description" style="text-align:left")
          h4(style="color:darkgreen;")=user.name
          p(style="color:maroon;font-style: italic; font-weight: bold;background-image: linear-gradient(-90deg, rgb(85, 3, 3, 0.3), rgb(12, 106, 160, 0.3));") Job Title : #{user.desig}
          p= user.descr
  hr
  div(class="project" style="text-align: center")
    h1(style="color:white; text-shadow: 1px 1px 2px black, 0 0 25px silver, 0 0 5px darkblue;") Projects 
        h4(style="color:white; text-shadow: 1px 1px 2px black, 0 0 25px silver, 0 0 5px darkblue;") Upload your projects/sample codes
        br
        a(href="/Upload_Project" class="btn btn-primary" style="text-align: center;") New Project
  br
  hr
  table
    thead
        tr 
            th(scope='col') Project/ Code
            th(scope='col') Type (ML/DL/NLP/DS/AI)
            th(scope='col') Description
            th(scope='col') Programming Language
            th(scope='col') Uploaded Date
            th(scope='col') Update
            th(scope='col') Delete
    tbody
        each proj in projectList
            tr
                td=proj.name
                td=proj.type
                td=proj.descr
                td=proj.lang
                td=proj.date
                td=proj.type
                td 
                  a(href="/delete_project/" + proj._id class="btn btn-danger") Delete
  br
  br
  br

