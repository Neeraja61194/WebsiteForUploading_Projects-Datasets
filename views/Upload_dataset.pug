extends ./Main_Layout.pug 

block styles_1
    link(rel='stylesheet' href="/css/other_pages.css")
    link(rel='stylesheet' href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous")
    link(rel='stylesheet' href="/css/form.css")
block script_1
    script(src='js/sticky.js')
    script(src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous")
block content
    br
    br
    div(class="Users_heading" style="text-align: center")
        h1(style="color:white; text-shadow: 1px 1px 2px black, 0 0 25px silver, 0 0 5px darkblue;") Upload New Dataset
    br
    br 
    form(action="/datasets" method="post" enctype="multipart/form-data")
      .imgcontainer
        p Please fill in this form to upload a dataset.
      .container
        hr
        label(for='name')
          b Dataset Name
        input(type="text" placeholder="Dataset" required="required" name="name")
        label(for='type')
          b Type of Dataset
        input(type='text', placeholder='Enter Type', name='type', required='')
        label(for='authorName')
          b Uploaded by
        input(type='text', placeholder='Enter Full Name', name='authorName', required='')
        label(for='date')
          b Uploaded Date
        input(type='text', placeholder='Enter Todays Date', name='date', required='')
        label(for='myTextarea') Description :
        br
        textarea(id="myTextarea" placeholder='Enter Description' name='description' rows="4" cols="80" style="white-space: pre-wrap;")
        hr
        label(for='file')
          b Attach the Dataset : 
        input(type="file" placeholder="superhero picture" name="file")
        hr
        button(onclick='myFunction()') Upload Dataset
        hr
        p
          | By creating an account you agree to our 
          a(href='#') Terms & Privacy
      .container.signin
        p
          | Already have an account? 
          a(href='Login_Form.html') Sign in
          | .
    